project intro/binutils ;

import alias ;
import errors ;
import feature ;
import make ;
import "$(INTRO_ROOT_DIR)/compilers" ;


rule assert-specified ( feature : properties * )
{
  local val = [ feature.get-values $(feature) : $(properties) ] ;
  if $(val) = unspecified {
    errors.error $(feature) is not specified for binutils build. ;
  }
}

rule assert-unspecified ( feature : properties * )
{
  local val = [ feature.get-values $(feature) : $(properties) ] ;
  if $(val) != unspecified {
    errors.error $(feature) is not valid for binutils build. ;
  }
}


rule compiler-dep-req ( properties * )
{
  assert-specified   <triplet>         : $(properties) ;
  assert-unspecified <multilib>        : $(properties) ;
  assert-specified   <multilib-hidden> : $(properties) ;
  assert-unspecified <binutils>        : $(properties) ;
  assert-unspecified <binutils-hidden> : $(properties) ;
  assert-unspecified <gmp>             : $(properties) ;
  assert-unspecified <gmp-hidden>      : $(properties) ;
  assert-unspecified <mpfr>            : $(properties) ;
  assert-unspecified <mpfr-hidden>     : $(properties) ;
  assert-unspecified <mpc>             : $(properties) ;
  assert-unspecified <mpc-hidden>      : $(properties) ;
  assert-unspecified <ppl>             : $(properties) ;
  assert-unspecified <ppl-hidden>      : $(properties) ;
  assert-unspecified <cloog>           : $(properties) ;
  assert-unspecified <cloog-hidden>    : $(properties) ;
  assert-specified   <compiler>        : $(properties) ;
  assert-unspecified <compiler-hidden> : $(properties) ;
  assert-unspecified <icu4c>           : $(properties) ;
  assert-unspecified <icu4c-hidden>    : $(properties) ;
  assert-unspecified <mpi>             : $(properties) ;
  assert-unspecified <mpi-hidden>      : $(properties) ;
  assert-unspecified <openmpi>         : $(properties) ;
  assert-unspecified <openmpi-hidden>  : $(properties) ;
  assert-unspecified <boost>           : $(properties) ;
  assert-unspecified <boost-hidden>    : $(properties) ;
  local multilib = [ feature.get-values <multilib-hidden> : $(properties) ] ;
  local compiler = [ feature.get-values <compiler> : $(properties) ] ;
  local result ;
  if [ "$(INTRO_ROOT_DIR)/compilers.is-gcc" $(compiler) ]
  {
    result = <source>../gcc//install/<multilib>$(multilib)/<multilib-hidden>unspecified ;
  }
  else if [ "$(INTRO_ROOT_DIR)/compilers.is-clang" $(compiler) ]
  {
    result = <source>../clang//install/<multilib-hidden>unspecified ;
  }
  else
  {
    errors.error "an internal error." ;
  }
  return $(result) ;
}

alias compiler-dep : : <conditional>$compiler-dep-req ;
explicit compiler-dep ;


for local version in $(BINUTILS_FOR_GCC)
{
  make "$(INTRO_ROOT_DIR)/binutils-$(version).tar.bz2" : : @download ;
  explicit "$(INTRO_ROOT_DIR)/binutils-$(version).tar.bz2" ;
}

rule download ( targets * : sources * : properties * )
{
  if $(sources[1]) {
    errors.error "a wrong number of sources." ;
  }
  assert-unspecified <triplet>         : $(properties) ;
  assert-unspecified <multilib>        : $(properties) ;
  assert-unspecified <multilib-hidden> : $(properties) ;
  assert-unspecified <binutils>        : $(properties) ;
  assert-specified   <binutils-hidden> : $(properties) ;
  assert-unspecified <gmp>             : $(properties) ;
  assert-unspecified <gmp-hidden>      : $(properties) ;
  assert-unspecified <mpfr>            : $(properties) ;
  assert-unspecified <mpfr-hidden>     : $(properties) ;
  assert-unspecified <mpc>             : $(properties) ;
  assert-unspecified <mpc-hidden>      : $(properties) ;
  assert-unspecified <ppl>             : $(properties) ;
  assert-unspecified <ppl-hidden>      : $(properties) ;
  assert-unspecified <cloog>           : $(properties) ;
  assert-unspecified <cloog-hidden>    : $(properties) ;
  assert-unspecified <compiler>        : $(properties) ;
  assert-unspecified <compiler-hidden> : $(properties) ;
  assert-unspecified <icu4c>           : $(properties) ;
  assert-unspecified <icu4c-hidden>    : $(properties) ;
  assert-unspecified <mpi>             : $(properties) ;
  assert-unspecified <mpi-hidden>      : $(properties) ;
  assert-unspecified <openmpi>         : $(properties) ;
  assert-unspecified <openmpi-hidden>  : $(properties) ;
  assert-unspecified <boost>           : $(properties) ;
  assert-unspecified <boost-hidden>    : $(properties) ;
  local version = [ feature.get-values <binutils-hidden> : $(properties) ] ;
  VERSION on $(targets) = $(version) ;
  URL on $(targets) = http://ftp.nara.wide.ad.jp/pub/GNU/gnu/binutils/binutils-$(version).tar.bz2 ;
  #URL on $(targets) = http://ftp.tsukuba.wide.ad.jp/software/binutils/binutils-$(version).tar.bz2 ;
  #URL on $(targets) = http://core.ring.gr.jp/pub/GNU/binutils/binutils-$(version).tar.bz2 ;
}
actions download
{
  rm -rf "$(<)" || exit 1
  if [ -n "$(STREAM)" ]; then
    ( cd "$(<:D)" && wget -- '$(URL)' >> "$(STREAM)" 2>&1 )
  else
    ( cd "$(<:D)" && wget --quiet -- '$(URL)' )
  fi
  if [ $? -ne 0 ]; then
    echo "ERROR: failed to download Binutils $(VERSION) tarball." 1>&2
    echo -n "ERROR: failed to download Binutils $(VERSION) tarball." | $(AWACS)
    rm -rf "$(<)"
    exit 1
  fi
  [ -f "$(<)" ] || exit 1
  exit 0
}


for local version in $(BINUTILS_FOR_GCC)
{
  # Use `README' file as a target representing the completion of
  # decompression action. It is suitable for the purpose because of the
  # following reasons;
  #
  #   - The name of this file is considered stable even if the version
  #     changes.
  #   - This file won't be modified during the build procedure.
  #
  make "$(INTRO_ROOT_DIR)/binutils-$(version)/README"
    : "$(INTRO_ROOT_DIR)/binutils-$(version).tar.bz2"
    : @expand
    ;
  explicit "$(INTRO_ROOT_DIR)/binutils-$(version)/README" ;
}

rule expand ( targets * : sources * : properties * )
{
  if ! $(sources[1])
  {
    errors.error "a wrong number of sources." ;
  }
  if $(sources[2])
  {
    errors.error "a wrong number of sources." ;
  }
  assert-unspecified <triplet>         : $(properties) ;
  assert-unspecified <multilib>        : $(properties) ;
  assert-unspecified <multilib-hidden> : $(properties) ;
  assert-unspecified <binutils>        : $(properties) ;
  assert-specified   <binutils-hidden> : $(properties) ;
  assert-unspecified <gmp>             : $(properties) ;
  assert-unspecified <gmp-hidden>      : $(properties) ;
  assert-unspecified <mpfr>            : $(properties) ;
  assert-unspecified <mpfr-hidden>     : $(properties) ;
  assert-unspecified <mpc>             : $(properties) ;
  assert-unspecified <mpc-hidden>      : $(properties) ;
  assert-unspecified <ppl>             : $(properties) ;
  assert-unspecified <ppl-hidden>      : $(properties) ;
  assert-unspecified <cloog>           : $(properties) ;
  assert-unspecified <cloog-hidden>    : $(properties) ;
  assert-unspecified <compiler>        : $(properties) ;
  assert-unspecified <compiler-hidden> : $(properties) ;
  assert-unspecified <icu4c>           : $(properties) ;
  assert-unspecified <icu4c-hidden>    : $(properties) ;
  assert-unspecified <mpi>             : $(properties) ;
  assert-unspecified <mpi-hidden>      : $(properties) ;
  assert-unspecified <openmpi>         : $(properties) ;
  assert-unspecified <openmpi-hidden>  : $(properties) ;
  assert-unspecified <boost>           : $(properties) ;
  assert-unspecified <boost-hidden>    : $(properties) ;
  local version = [ feature.get-values <binutils-hidden> : $(properties) ] ;
  VERSION on $(targets) = $(version) ;
}
actions expand
{
  rm -rf "$(<:D)" || exit 1
  [ -f "$(>)" ] || exit 1
  if [ -n "$(STREAM)" ]; then
    tar xjvf "$(>)" --directory="$(INTRO_ROOT_DIR)" >> "$(STREAM)" 2>&1
  else
    tar xjf "$(>)" --directory="$(INTRO_ROOT_DIR)"
  fi
  if [ $? -ne 0 ]; then
    echo "ERROR: failed to expand Binutils $(VERSION) tarball." 1>&2
    echo -n "ERROR: failed to expand Binutils $(VERSION) tarball." | $(AWACS)
    rm -rf "$(<:D)"
    exit 1
  fi
  # If the timestamp of the tarball's contents is restored, the modification
  # time of the source directory could be older than the one of the tarball.
  # Such behavior is not desirable because the decompression always happens.
  # Therefore, `touch' is required.
  touch --no-create "$(<)"
  [ -f "$(<)" ] || exit 1
  exit 0
}


rule srcdir-req ( properties * )
{
  assert-unspecified <triplet>         : $(properties) ;
  assert-unspecified <multilib>        : $(properties) ;
  assert-unspecified <multilib-hidden> : $(properties) ;
  assert-specified   <binutils>        : $(properties) ;
  assert-unspecified <binutils-hidden> : $(properties) ;
  assert-unspecified <gmp>             : $(properties) ;
  assert-unspecified <gmp-hidden>      : $(properties) ;
  assert-unspecified <mpfr>            : $(properties) ;
  assert-unspecified <mpfr-hidden>     : $(properties) ;
  assert-unspecified <mpc>             : $(properties) ;
  assert-unspecified <mpc-hidden>      : $(properties) ;
  assert-unspecified <ppl>             : $(properties) ;
  assert-unspecified <ppl-hidden>      : $(properties) ;
  assert-unspecified <cloog>           : $(properties) ;
  assert-unspecified <cloog-hidden>    : $(properties) ;
  assert-unspecified <compiler>        : $(properties) ;
  assert-unspecified <compiler-hidden> : $(properties) ;
  assert-unspecified <icu4c>           : $(properties) ;
  assert-unspecified <icu4c-hidden>    : $(properties) ;
  assert-unspecified <mpi>             : $(properties) ;
  assert-unspecified <mpi-hidden>      : $(properties) ;
  assert-unspecified <openmpi>         : $(properties) ;
  assert-unspecified <openmpi-hidden>  : $(properties) ;
  assert-unspecified <boost>           : $(properties) ;
  assert-unspecified <boost-hidden>    : $(properties) ;
  local version = [ feature.get-values <binutils> : $(properties) ] ;
  return <source>"$(INTRO_ROOT_DIR)/binutils-$(version)/README/<binutils>unspecified/<binutils-hidden>$(version)" ;
}

alias srcdir : : <conditional>@srcdir-req ;
explicit srcdir ;


for local compiler in $(COMPILERS)
{
  local prefix-leaf ;
  local compiler-prefix ;
  if [ "$(INTRO_ROOT_DIR)/compilers.is-gcc" "$(compiler)" ]
  {
    prefix-leaf = $(compiler) ;
    compiler-prefix = "$(PREFIX)/$(prefix-leaf)" ;
  }
  else if [ "$(INTRO_ROOT_DIR)/compilers.is-clang" "$(compiler)" ]
  {
    if ! $(GCC_FOR_CLANG)
    {
      errors.error "an internal error." ;
    }
    prefix-leaf = $(compiler)-gcc-$(GCC_FOR_CLANG) ;
    compiler-prefix = "$(PREFIX)/$(prefix-leaf)" ;
  }
  else
  {
    errors.error "an internal error." ;
  }
  make "$(compiler-prefix)/bin/ld.gold"
    : compiler-dep/<binutils>unspecified
      srcdir/<triplet>unspecified/<multilib-hidden>unspecified/<compiler>unspecified
    : @make-install
    ;
  explicit "$(compiler-prefix)/bin/ld.gold" ;
}

rule make-install ( targets * : sources * : properties * )
{
  assert-specified   <triplet>         : $(properties) ;
  assert-unspecified <multilib>        : $(properties) ;
  assert-specified   <multilib-hidden> : $(properties) ;
  assert-specified   <binutils>        : $(properties) ;
  assert-unspecified <binutils-hidden> : $(properties) ;
  assert-unspecified <gmp>             : $(properties) ;
  assert-unspecified <gmp-hidden>      : $(properties) ;
  assert-unspecified <mpfr>            : $(properties) ;
  assert-unspecified <mpfr-hidden>     : $(properties) ;
  assert-unspecified <mpc>             : $(properties) ;
  assert-unspecified <mpc-hidden>      : $(properties) ;
  assert-unspecified <ppl>             : $(properties) ;
  assert-unspecified <ppl-hidden>      : $(properties) ;
  assert-unspecified <cloog>           : $(properties) ;
  assert-unspecified <cloog-hidden>    : $(properties) ;
  assert-specified   <compiler>        : $(properties) ;
  assert-unspecified <compiler-hidden> : $(properties) ;
  assert-unspecified <icu4c>           : $(properties) ;
  assert-unspecified <icu4c-hidden>    : $(properties) ;
  assert-unspecified <mpi>             : $(properties) ;
  assert-unspecified <mpi-hidden>      : $(properties) ;
  assert-unspecified <openmpi>         : $(properties) ;
  assert-unspecified <openmpi-hidden>  : $(properties) ;
  assert-unspecified <boost>           : $(properties) ;
  assert-unspecified <boost-hidden>    : $(properties) ;

  OPTIONS on $(targets) = ;

  local version = [ feature.get-values <binutils> : $(properties) ] ;
  VERSION on $(targets) = $(version) ;

  local compiler-description = [ "$(INTRO_ROOT_DIR)/compilers.get-compiler-description" $(compiler) ] ;
  COMPILER_DESCRIPTION on $(targets) = "$(compiler-description)" ;

  # Set the path to the source directory.
  local srcdir = "$(INTRO_ROOT_DIR)/binutils-$(version)" ;
  SRCDIR on $(targets) = $(srcdir) ;

  # Set the '--build', '--host' and '--target' options for the 'configure' script.
  local triplet = [ feature.get-values <triplet> : $(properties) ] ;
  TRIPLET on $(targets) = $(triplet) ;
  OPTIONS on $(targets) += --build=$(triplet) ;
  OPTIONS on $(targets) += --host=$(triplet) ;
  OPTIONS on $(targets) += --target=$(triplet) ;

  # Set the '--prefix' option for the 'configure' script.
  OPTIONS on $(targets) += --prefix=\"$(PREFIX)\" ;

  OPTIONS on $(targets) += --enable-ld ;
  OPTIONS on $(targets) += --enable-gold=default ;

  OPTIONS on $(targets) += --enable-libssp ;

  OPTIONS on $(targets) += --enable-lto ;
  OPTIONS on $(targets) += --enable-plugins ;
}
actions make-install
{
  [ -x "$(SRCDIR)/configure" ] || exit 1
  [ -x "$(SRCDIR)/config.sub" ] || exit 1
  [ `"$(SRCDIR)/config.sub" $(TRIPLET)` = $(TRIPLET) ] || exit 1

  # Set the absolute path to `objdir'.
  objdir="$(INTRO_ROOT_DIR)/objdir"

  # Clean up the `objdir'.
  { mkdir -p "$objdir" && ( cd "$objdir" && rm -rf * ); } || exit 1

  if [ -n "$(STREAM)" ]; then
    ( cd "$objdir" && "$(SRCDIR)/configure" $(OPTIONS) >> "$(STREAM)" 2>&1 )
  else
    ( cd "$objdir" && "$(SRCDIR)/configure" $(OPTIONS) )
  fi
  if [ $? -ne 0 ]; then
    echo "ERROR: failed to 'configure' Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET))." 1>&2
    echo -n "ERROR: failed to 'configure' Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET))." | $(AWACS)
    exit 1
  fi

  # Check the creation of `Makefile'.
  [ -f "${objdir}/Makefile" ] || exit 1

  if [ -n "$(STREAM)" ]; then
    ( cd "$objdir" && make --jobs=$(CONCURRENCY) >> "$(STREAM)" 2>&1 )
  else
    ( cd "$objdir" && make --jobs=$(CONCURRENCY) )
  fi
  if [ $? -ne 0 ]; then
    echo "ERROR: failed to 'make' Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET))." 1>&2
    echo -n "ERROR: failed to 'make' Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET))." | $(AWACS)
    exit 1
  fi

  if [ -n "$(STREAM)" ]; then
    ( cd "$objdir" && make --jobs=$(CONCURRENCY) check >> "$(STREAM)" 2>&1 )
  else
    ( cd "$objdir" && make --jobs=$(CONCURRENCY) check )
  fi
  if [ $? -ne 0 ]; then
    echo "ERROR: failed to 'make check' Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET))." 1>&2
    echo -n "ERROR: failed to 'make check' Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET))." | $(AWACS)
    exit 1
  fi

  if [ -n "$(STREAM)" ]; then
    ( cd "$objdir" && make install >> "$(STREAM)" 2>&1 )
  else
    ( cd "$objdir" && make install )
  fi
  if [ $? -ne 0 ]; then
    echo "ERROR: failed to 'make install' Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET))." 1>&2
    echo -n "ERROR: failed to 'make install' Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET))." | $(AWACS)
    exit 1
  fi

  [ -x "$(<)" ] || exit 1

  # Clean up the `objdir'.
  rm -rf "$objdir" || exit 1

  echo -n "Binutils $(VERSION) ($(COMPILER_DESCRIPTION), $(TRIPLET)) was successfully built." | $(AWACS)
  exit 0
}


rule install-req ( properties * )
{
  assert-specified   <triplet>         : $(properties) ;
  assert-unspecified <multilib>        : $(properties) ;
  assert-specified   <multilib-hidden> : $(properties) ;
  assert-specified   <binutils>        : $(properties) ;
  assert-unspecified <binutils-hidden> : $(properties) ;
  assert-unspecified <gmp>             : $(properties) ;
  assert-unspecified <gmp-hidden>      : $(properties) ;
  assert-unspecified <mpfr>            : $(properties) ;
  assert-unspecified <mpfr-hidden>     : $(properties) ;
  assert-unspecified <mpc>             : $(properties) ;
  assert-unspecified <mpc-hidden>      : $(properties) ;
  assert-unspecified <ppl>             : $(properties) ;
  assert-unspecified <ppl-hidden>      : $(properties) ;
  assert-unspecified <cloog>           : $(properties) ;
  assert-unspecified <cloog-hidden>    : $(properties) ;
  assert-specified   <compiler>        : $(properties) ;
  assert-unspecified <compiler-hidden> : $(properties) ;
  assert-unspecified <icu4c>           : $(properties) ;
  assert-unspecified <icu4c-hidden>    : $(properties) ;
  assert-unspecified <mpi>             : $(properties) ;
  assert-unspecified <mpi-hidden>      : $(properties) ;
  assert-unspecified <openmpi>         : $(properties) ;
  assert-unspecified <openmpi-hidden>  : $(properties) ;
  assert-unspecified <boost>           : $(properties) ;
  assert-unspecified <boost-hidden>    : $(properties) ;

  local compiler = [ feature.get-values <compiler> : $(properties) ] ;
  local compiler-prefix ;
  if [ "$(INTRO_ROOT_DIR)/compilers.is-gcc" "$(compiler)" ]
  {
    compiler-prefix = "$(PREFIX)/$(compiler)" ;
  }
  else if [ "$(INTRO_ROOT_DIR)/compilers.is-clang" "$(compiler)" ]
  {
    if ! $(GCC_FOR_CLANG)
    {
      errors.error "an internal error." ;
    }
    compiler-prefix = "$(PREFIX)/$(compiler)-gcc-$(GCC_FOR_CLANG)" ;
  }
  else
  {
    errors.error "an internal error." ;
  }
  return <source>"$(compiler-prefix)/bin/ld.gold" ;
}

alias install : : <conditional>@install-req ;
explicit install ;
